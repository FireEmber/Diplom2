<Window x:Class="Diplom.View.TeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom.View"
        mc:Ignorable="d"
        Title="TeacherWindow" 
         Height="400" 
        FontSize="22"
        Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="2" Content="Перейти к оценкам" Name="GotoAttest" Click="GotoAttest_Click" Background="#FF8EF73A" Foreground="Black"/>
        <Button Grid.Row="1" Content="Перейти к созданию теста" Name="GotoCreateNewTest" Click="GotoCreateNewTest_Click" Background="#FF8EF73A"/>
        <Button Grid.Row="0" Content="Зарегистрировать ученика" Name="RegistNewStudent" Click="RegistNewStudent_Click" Background="#FF8EF73A" />
        <Button Grid.Row="3" Content="Вернуться" Name="Back" Click="Back_Click" Background="#FFFF2C70" Foreground="#FFD7FF2F"/>
        
    </Grid>
</Window>
